      <%= render(Forms::FieldComponent.new(:category, form: form, css_class: %w[rounded-b-none rounded-t-md bg-white w-1], type: :text, fieldheader:'Category',fieldlabel: 'nill', placeholder: 'aa', autofocus: true, autocomplete: 'email', required: true)) %>
      <%= render(Forms::FieldComponent.new(:price, form: form, css_class: %w[rounded-b-none rounded-t-md bg-white w-2], type: :number, fieldheader:'Price',fieldlabel:'Please fill the price', placeholder: 'Price', autofocus: true, autocomplete: 'email', required: true)) %>
