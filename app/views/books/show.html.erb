<%= turbo_frame_tag 'book' do %>


<% if @book.book_image.attached? %>
 <%= image_tag @book.book_image%>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @book.name %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Category:</strong>
  <%= @book.category %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>
<div id="container" style="height: 400px; min-width: 310px"></div>
<%= link_to 'Edit', edit_book_path(@book), :class =>"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"  %> 
<%= link_to 'Back', books_path , :class =>"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"%>
<% end %>

