 <li class="my-px ">
    <a href="<%= @link %>" class="flex flex-row items-center h-10 px-3 rounded-lg text-gray-500 hover:bg-gray-700" >
        <span class="flex items-center justify-center text-lg">
            <%= icon_class %>
        </span>
        <span class="ml-3"> 
            <%= title_bar %> 
        </span>
        <% if content %>
        <span class="flex items-center justify-center text-xs text-red-500 font-semibold bg-red-100 h-6 px-2 rounded-full ml-auto">
         <%= content %>
        </span>
        <% end %>
    </a>
</li>

